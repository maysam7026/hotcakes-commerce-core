



if (exists (select * from dbo.sysobjects where id = object_id(N'{databaseOwner}{objectQualifier}ZLDNN_DNNArticleCategory') and OBJECTPROPERTY(id, N'IsTable') = 1)) and (not exists (select * from dbo.syscolumns where id = object_id(N'{databaseOwner}{objectQualifier}ZLDNN_DNNArticleCategory') and name='SubCategoriesNumber'))
ALTER TABLE {databaseOwner}{objectQualifier}ZLDNN_DNNArticleCategory ADD  
[SubCategoriesNumber] [int]  NULL,
[Number] [int]  NULL
GO

Update {objectQualifier}ZLDNN_DNNArticleCategory SET
SubCategoriesNumber=-2,
[Number]=-2

GO

