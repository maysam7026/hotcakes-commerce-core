-- ZLDNN_DNNArticleFirstLevelCategory
-- 09.07.16

if exists (select * from dbo.sysobjects where id = object_id(N'{databaseOwner}{objectQualifier}ZLDNN_DNNArticleFirstLevelCategory') and OBJECTPROPERTY(id, N'IsProcedure') = 1)
drop procedure {databaseOwner}{objectQualifier}ZLDNN_DNNArticleFirstLevelCategory
GO


SET QUOTED_IDENTIFIER ON 
GO
SET ANSI_NULLS OFF 
GO

CREATE PROCEDURE {databaseOwner}{objectQualifier}ZLDNN_DNNArticleFirstLevelCategory
@ModuleID int,
@SortOrder nvarchar(200)

AS

SELECT
	c.*
	
FROM {objectQualifier}ZLDNN_DNNArticleCategory as c

WHERE
	[ModuleID]=@Moduleid
	And
	c.[ParentID] is null
	Order by 
	 CASE WHEN @SortOrder='VIEWORDER ASC' THEN [VIEWORDER] END ASC,
  CASE WHEN @SortOrder='VIEWORDER DESC' THEN [VIEWORDER] END DESC,
  CASE WHEN @SortOrder='TITLE DESC' THEN [TITLE] END DESC, 
  CASE WHEN @SortOrder='TITLE ASC' THEN [TITLE] END ASC
GO

SET QUOTED_IDENTIFIER OFF 
GO
SET ANSI_NULLS ON 
GO


if exists (select * from dbo.sysobjects where id = object_id(N'{databaseOwner}{objectQualifier}ZLDNN_DNNArticleCategoryGetById') and OBJECTPROPERTY(id, N'IsProcedure') = 1)
drop procedure {databaseOwner}{objectQualifier}ZLDNN_DNNArticleCategoryGetById
GO

SET QUOTED_IDENTIFIER OFF 
GO
SET ANSI_NULLS OFF 
GO

CREATE PROCEDURE {databaseOwner}{objectQualifier}ZLDNN_DNNArticleCategoryGetById
	@ItemID int

AS

SELECT
	c.*,
	a.number,
	d.subcategoriesnumber
	
FROM {objectQualifier}ZLDNN_DNNArticleCategory as c
left outer join ( select categoryid, count(*) as number FROM {objectQualifier}ZLDNN_DNNArticleAssignedCategories where categoryid=@ItemID group by CategoryID ) as a on 
c.ItemID=a.CategoryID
left outer join ( select parentid, count(*) as subcategoriesnumber FROM {objectQualifier}ZLDNN_DNNArticleCategory where parentid=@ItemID group by parentid) as d on 
c.ItemId=d.parentid
WHERE
	c.[ItemID] = @ItemID
	
GO

SET QUOTED_IDENTIFIER OFF 
GO
SET ANSI_NULLS ON 
GO
