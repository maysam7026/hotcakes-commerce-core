CREATE PROCEDURE {databaseOwner}{objectQualifier}ZLDNN_DNNArticleMoveCategory
	@FromCategory int,
	@ToCategory int
	
AS

Update {objectQualifier}ZLDNN_DNNArticleAssignedCategories
Set CategoryID=@ToCategory where CategoryID= @FromCategory

GO


